---
import Layout from '@/layouts/layout-prose.astro';
import { Separator } from '@/components/ui/separator';
import ListRow from '@/components/list/list-row.astro';
import ListLink from '@/components/list/list-link.astro';
import { LEARNING } from '@/lib/constants';
---

<Layout title="learning">
  <div class="space-y-2">
    <h1 class="font-serif">Learning</h1>
    <p class="text-muted-foreground text-sm">
      More than anything, I love learning. Here are some of the things I'm
      currently learning or hope to learn some day.
    </p>
  </div>
  <div class="space-y-3">
    <h2 class="font-serif">Currently</h2>
    <ul class="space-y-2 text-sm text-muted-foreground">
      {
        LEARNING.currently.map((skill, i) => (
          <>
            <ListRow>
              <ListLink>{skill}</ListLink>
            </ListRow>
            {i !== LEARNING.next.length - 1 ? <Separator /> : null}
          </>
        ))
      }
    </ul>
  </div>
  <div class="space-y-3">
    <h2 class="font-serif">Some Day</h2>
    <ul class="space-y-2 text-sm text-muted-foreground">
      {
        LEARNING.next.map((skill, i) => (
          <>
            <ListRow>
              <ListLink>{skill}</ListLink>
            </ListRow>
            {i !== LEARNING.next.length - 1 ? <Separator /> : null}
          </>
        ))
      }
    </ul>
  </div>
</Layout>
